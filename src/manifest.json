{
  "name": "S-Post - LinkedIn Manager",
  "description": "Extrait les donn√©es LinkedIn et les envoie vers S-Post Back Office",
  "version": "2.4.0",
  "short_name": "S-Post",
  "manifest_version": 3,
  "default_locale": "fr",
  
  "icons": {
    "16": "images/pp_icon16.png",
    "32": "images/pp_icon32.png",
    "48": "images/pp_icon48.png",
    "128": "images/pp_icon128.png"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content/linkedin.js"],
      "css": ["content/linkedin.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:5174/*",
        "http://localhost:*/*"
      ],
      "js": ["content/backoffice-bridge.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "activeTab",
    "webRequest"
  ],
  
  "host_permissions": [
    "*://*.linkedin.com/*",
    "https://api.notion.com/*",
    "http://localhost:5173/*",
    "http://localhost:5174/*",
    "http://localhost:*/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "S-Post - LinkedIn Manager",
    "default_icon": {
      "16": "images/pp_icon16.png",
      "32": "images/pp_icon32.png",
      "48": "images/pp_icon48.png",
      "128": "images/pp_icon128.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["*://*.linkedin.com/*", "http://localhost:5173/*", "http://localhost:5174/*"]
    }
  ]
}
